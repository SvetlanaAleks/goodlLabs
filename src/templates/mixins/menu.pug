- var MENU = LANG.menu;

include menu-mob.pug

mixin menu(page)
	+menu-mob(page)
	.menu.js-fixed-menu
		.menu__wrap
			a.logo.menu__logo(href="index.html")
				img.logo__img(src="img/svg/logo.svg", alt="goodlabs")
			ul.menu__list.nav
				li.nav__item
					a.nav__link(href="index.html")!= MENU.item1
				li.nav__item
					a.nav__link.js-btn-submenu(href="")!= MENU.item2
					.products-menu.products-menu--desktop.js-submenu
						include submenu.pug
				li.nav__item
					a.nav__link(href="")!= MENU.item3
				li.nav__item
					a.nav__link(href="")!= MENU.item4
				li.nav__item
					a.nav__link(href="")!= MENU.item5
				li.nav__item
					a.nav__link(href="")!= MENU.item6
			.menu__right
				.menu__lang.lang
						i.fico.fico-world
						.lang__list-wrap
							.lang__list
								a.lang-item(href=`/${page}.html`)
									img.lang-item__ico(src="img/svg/langEN.svg", alt="langEN")
								a.lang-item(href=`/de/${page}.html`)
									img.lang-item__ico(src="img/svg/langDE.svg", alt="langDE")
				.burger.js-burger(data-target="#js-mobile-menu")
					span.burger__line
					span.burger__line
					span.burger__line